#include<iostream>
#include<iomanip>
using namespace std;
struct date //creating structure 
{
	int mm,dd,yy;
};
int input(date &a) //creating function named input
{
	cout<<"enter mm/dd/yy";
	cin>>a.mm>>a.dd>>a.yy;
}
int display(date &a) // creating function named display
{
	cout<<"the date is "<<a.mm<<"/"<<a.dd<<"/"<<a.yy;
}
int main()
{
	struct date b; 
	input(b);
	display(b);
return 0 ;
}
